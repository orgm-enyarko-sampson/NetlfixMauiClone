<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Netflix_Clone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Netflix_Clone.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="hometab"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" /> 
       
        <ShellContent
        Title="Games"
        Icon="game"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" /> 
        
        <ShellContent
        Title="New &amp; Hot"
        Icon="brand_netflix"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" /> 
        
        <ShellContent
        Title="Downloads"
        Icon="download"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
    </TabBar>



</Shell>
